---
interface Props {
  title?: string;
  highlightedText?: string;
  description?: string;
  primaryButtonText?: string;
  primaryButtonHref?: string;
  secondaryButtonText?: string;
  secondaryButtonHref?: string;
  imageUrl?: string;
  imageAlt?: string;
}

const {
  title = "Plataforma Unificada de",
  highlightedText = "Capital Humano",
  description = "Automatiza tus procesos de RRHH y reclutamiento con HexaLink. Una solución moderna basada en microservicios que conecta personal, vacaciones, notificaciones y gestión de vacantes en un solo lugar.",
  primaryButtonText = "Ver Vacantes Abiertas",
  primaryButtonHref = "#vacantes",
  secondaryButtonText = "Conocer Más",
  secondaryButtonHref = "#soluciones",
  imageUrl = "https://images.unsplash.com/photo-1552664730-d307ca884978?w=800&h=600&fit=crop",
  imageAlt = "Equipo HexaLink",
} = Astro.props;
---

<section id="inicio" class="hero">
  <div class="hero-content">
    <div class="hero-text">
      <h1>{title} <span>{highlightedText}</span></h1>
      <p>{description}</p>
      <div class="cta-buttons">
        <a href={primaryButtonHref} class="btn-primary">{primaryButtonText}</a>
        <a href={secondaryButtonHref} class="btn-secondary"
          >{secondaryButtonText}</a
        >
      </div>
    </div>
    <div class="hero-image">
      <img src={imageUrl} alt={imageAlt} />
    </div>
  </div>
</section>
