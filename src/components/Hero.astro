---
interface Props {
  title?: string;
  highlightedText?: string;
  description?: string;
  primaryButtonText?: string;
  primaryButtonHref?: string;
  secondaryButtonText?: string;
  secondaryButtonHref?: string;
  imageUrl?: string;
  imageAlt?: string;
}

const {
  title = "Unified Platform for",
  highlightedText = "Human Capital",
  description = "Automate your HR and recruitment processes with HexaLink. A modern microservices-based solution that connects personnel, time off, notifications, and job management in one place.",
  primaryButtonText = "Get Started",
  primaryButtonHref = "#contact",
  secondaryButtonText = "Learn More",
  secondaryButtonHref = "#solutions",
  imageUrl = "https://images.unsplash.com/photo-1552664730-d307ca884978?w=800&h=600&fit=crop",
  imageAlt = "HexaLink Team",
} = Astro.props;
---

<section id="home" class="hero">
  <div class="hero-content">
    <div class="hero-text">
      <h1>{title} <span>{highlightedText}</span></h1>
      <p>{description}</p>
      <div class="cta-buttons">
        <a href={primaryButtonHref} class="btn-primary">{primaryButtonText}</a>
        <a href={secondaryButtonHref} class="btn-secondary"
          >{secondaryButtonText}</a
        >
      </div>
    </div>
    <div class="hero-image">
      <img src={imageUrl} alt={imageAlt} />
    </div>
  </div>
</section>
