---
interface SocialLink {
  href: string;
  label: string;
}

interface FooterLinkGroup {
  title: string;
  links: { href: string; label: string }[];
}

interface Props {
  brandName?: string;
  brandDescription?: string;
  socialLinks?: SocialLink[];
  linkGroups?: FooterLinkGroup[];
  copyright?: string;
}

const {
  brandName = "HexaLink",
  brandDescription = "Comprehensive human capital management platform. We transform the way companies manage their talent with modern and efficient technology.",
  socialLinks = [
    { href: "#", label: "Li" },
    { href: "#", label: "Tw" },
    { href: "#", label: "Fb" },
    { href: "#", label: "Ig" },
  ],
  linkGroups = [
    {
      title: "Solutions",
      links: [
        { href: "/#solutions", label: "Personnel Module" },
        { href: "/#solutions", label: "Recruitment" },
        { href: "/#solutions", label: "Analytics" },
        { href: "/#solutions", label: "Integrations" },
      ],
    },
    {
      title: "Company",
      links: [
        { href: "/#about", label: "About Us" },
        { href: "/#contact", label: "Careers" },
        { href: "/#contact", label: "Contact" },
        { href: "#", label: "Blog" },
      ],
    },
    {
      title: "Legal",
      links: [
        { href: "/terms", label: "Terms of Service" },
        { href: "/privacy", label: "Privacy Policy" },
        { href: "/cookies", label: "Cookies" },
        { href: "/licenses", label: "Licenses" },
      ],
    },
  ],
  copyright = "Â© 2024 HexaLink. All rights reserved.",
} = Astro.props;
---

<footer>
  <div class="footer-content">
    <div class="footer-about">
      <h3>{brandName}</h3>
      <p>{brandDescription}</p>
      <div class="social-links">
        {
          socialLinks.map((link) => (
            <a href={link.href} class="social-link">
              {link.label}
            </a>
          ))
        }
      </div>
    </div>
    {
      linkGroups.map((group) => (
        <div class="footer-links">
          <h4>{group.title}</h4>
          {group.links.map((link) => (
            <a href={link.href}>{link.label}</a>
          ))}
        </div>
      ))
    }
  </div>
  <div class="footer-bottom">
    <p>{copyright}</p>
  </div>
</footer>
