---
interface ContactDetail {
  icon: string;
  title: string;
  value: string;
}

interface Props {
  sectionTitle?: string;
  sectionSubtitle?: string;
  infoTitle?: string;
  infoDescription?: string;
  contactDetails?: ContactDetail[];
}

const {
  sectionTitle = "Contact Us",
  sectionSubtitle = "Have questions? We're here to help",
  infoTitle = "Contact Information",
  infoDescription = "Get in touch with our team for more information about our solutions or to start your recruitment process.",
  contactDetails = [
    { icon: "üìß", title: "Email", value: "contact@hexalink.com" },
    { icon: "üìû", title: "Phone", value: "+1 (555) 123-4567" },
    { icon: "üìç", title: "Location", value: "New York, USA" },
  ],
} = Astro.props;
---

<section id="contact" class="contact">
  <div class="content-container">
    <div class="section-title">
      <h2>{sectionTitle}</h2>
      <p>{sectionSubtitle}</p>
    </div>
    <div class="contact-content">
      <div class="contact-info">
        <h3>{infoTitle}</h3>
        <p>{infoDescription}</p>
        <div class="contact-details">
          {
            contactDetails.map((detail) => (
              <div class="contact-item">
                <div class="contact-icon">{detail.icon}</div>
                <div class="contact-item-text">
                  <h4>{detail.title}</h4>
                  <p>{detail.value}</p>
                </div>
              </div>
            ))
          }
        </div>
      </div>
      <form class="contact-form" id="contact-form">
        <div id="form-message" class="form-message"></div>
        <div class="form-group">
          <label for="name">Full Name</label>
          <input type="text" id="name" name="name" required />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" required />
        </div>
        <div class="form-group">
          <label for="subject">Subject</label>
          <input type="text" id="subject" name="subject" required />
        </div>
        <div class="form-group">
          <label for="message">Message</label>
          <textarea id="message" name="message" required></textarea>
        </div>
        <button type="submit" class="btn-primary">Send Message</button>
      </form>
    </div>
  </div>
</section>
