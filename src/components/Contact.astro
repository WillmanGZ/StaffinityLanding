---
interface ContactDetail {
  icon: string;
  title: string;
  value: string;
}

interface Props {
  sectionTitle?: string;
  sectionSubtitle?: string;
  infoTitle?: string;
  infoDescription?: string;
  contactDetails?: ContactDetail[];
}

const {
  sectionTitle = "Cont치ctanos",
  sectionSubtitle = "쯊ienes preguntas? Estamos aqu칤 para ayudarte",
  infoTitle = "Informaci칩n de Contacto",
  infoDescription = "Ponte en contacto con nuestro equipo para m치s informaci칩n sobre nuestras soluciones o para comenzar tu proceso de reclutamiento.",
  contactDetails = [
    { icon: "游닎", title: "Email", value: "contacto@hexalink.com" },
    { icon: "游", title: "Tel칠fono", value: "+57 (5) 123-4567" },
    { icon: "游늸", title: "Ubicaci칩n", value: "Barranquilla, Colombia" },
  ],
} = Astro.props;
---

<section id="contacto" class="contact">
  <div class="content-container">
    <div class="section-title">
      <h2>{sectionTitle}</h2>
      <p>{sectionSubtitle}</p>
    </div>
    <div class="contact-content">
      <div class="contact-info">
        <h3>{infoTitle}</h3>
        <p>{infoDescription}</p>
        <div class="contact-details">
          {
            contactDetails.map((detail) => (
              <div class="contact-item">
                <div class="contact-icon">{detail.icon}</div>
                <div class="contact-item-text">
                  <h4>{detail.title}</h4>
                  <p>{detail.value}</p>
                </div>
              </div>
            ))
          }
        </div>
      </div>
      <form class="contact-form" id="contact-form">
        <div id="form-message" class="form-message"></div>
        <div class="form-group">
          <label for="name">Nombre Completo</label>
          <input type="text" id="name" name="name" required />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" required />
        </div>
        <div class="form-group">
          <label for="subject">Asunto</label>
          <input type="text" id="subject" name="subject" required />
        </div>
        <div class="form-group">
          <label for="message">Mensaje</label>
          <textarea id="message" name="message" required></textarea>
        </div>
        <button type="submit" class="btn-primary">Enviar Mensaje</button>
      </form>
    </div>
  </div>
</section>
