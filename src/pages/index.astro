---
import "../styles/styles.css";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <section id="home" class="hero">
    <div class="hero-content">
      <div class="hero-text">
        <h1>Unified Platform for <span>Human capital</span></h1>
        <p>
          Automate your HR and recruitment processes with Staffinity. A modern
          solution that connects personnel, vacations,
          notifications, and job management in one place.
        </p>
        <div class="cta-buttons">
          <a href="/contact" class="btn-primary">Get Started</a>
          <a href="/solutions" class="btn-secondary">Learn More</a>
        </div>
      </div>
      <div class="hero-image">
        <img
          src="https://images.unsplash.com/photo-1552664730-d307ca884978?w=800&h=600&fit=crop"
          alt="HexaLink Team"
          loading="lazy"
          decoding="async"
        />
      </div>
    </div>
  </section>
</Layout>
