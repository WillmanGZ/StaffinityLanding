---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "HexaLink - Human Capital Management Platform",
  description = "HexaLink is a comprehensive human capital management platform. Automate HR processes, recruitment, time off, and notifications with microservices architecture.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="human capital management, HR, human resources, recruitment, job openings, microservices, HexaLink, personnel management"
    />
    <meta name="author" content="HexaLink" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://hexalink.com/" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://hexalink.com/" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://hexalink.com/og-image.jpg" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content="https://hexalink.com/" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://hexalink.com/og-image.jpg" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <slot />
  </body>
</html>
